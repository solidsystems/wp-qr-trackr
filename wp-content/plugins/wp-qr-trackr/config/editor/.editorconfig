# EditorConfig helps maintain consistent coding styles
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2 